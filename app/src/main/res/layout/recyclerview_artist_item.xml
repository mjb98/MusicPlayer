<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="4dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/round_bacground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/artist_item_imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/artisticon"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/artist_item_artistview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/artist_item_imageView"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:text="Artist" />

    <TextView
        android:id="@+id/artist_item_songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist_item_artistview"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/artist_item_imageView"
        android:textColor="#adadad"
        tools:text="13 Songs" />
</RelativeLayout>